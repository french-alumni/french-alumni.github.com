%html
	%head
		%meta{:charset => "utf-8"}
		%title Static Website generator with Twitter Bootstrap and HAML
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
		%meta{:name => "description", :content => "Welcome to third revolution"}
		%meta{:name => "author", :content => "Arvinder Singh Kang."}
		:plain
			<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
			<!--[if lt IE 9]>
				<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
			<![endif]-->

		/ Le styles
		%link{ :href => "css/bootstrap.css", :type => "text/css", :rel => "stylesheet" }
		/ add body padding styles
		%link{ :href => "css/custom-styles.css", :type => "text/css", :rel => "stylesheet" }
		/ Le fav and touch icons
		%link{ rel: "apple-touch-icon", href: "images/apple-touch-icon.png"}
		%link{ rel: "shortcut icon", href: "images/favicon.ico"}
		%link{ rel: "apple-touch-icon", sizes: "72x72", href: "images/apple-touch-icon-72x72.png"}
		%link{ rel: "apple-touch-icon", sizes: "114x114", href: "images/apple-touch-icon-114x114.png"}

	%body
		= render '_navbar.html.haml'
		= yield
		
		/ Placed at the end of the document so the pages load faster		
		%script{ :type => "text/javascript", :src =>"js/jquery.js"}
		